/* miniprogram/pages/guide.wxss */
section{
  margin: 20rpx 0;
  width: 100%;
}
.empty{
  color: #80848f;
  text-align: center;
  padding: 30rpx 0;
}
.cardWraper{
  background: #fff;
  border-radius: 5px;
  overflow: hidden;
  width: 630rpx;
  padding:30rpx;
  font-size: 14px;
  margin-bottom: 30rpx;
  color: #495060;
}
.cardHeader{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  margin-bottom: 15rpx;
}
.title{
  font-size: 16px;
  color: #1c2438;
}
.joins{
  font-size: 16px;
  color: #ed3f14;
}
.cardContent{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.wait{
  /* color: #07c160; */
  align-self: center;
}
.cardBottom{
  color: #80848f;
}
.floatIcon{
  background: #07c160;
  color: #fff;
  position: fixed;
  right: 30rpx;
  bottom: 150rpx;
  height: 150rpx;
  width: 150rpx;
  font-size: 50px;
  border-radius: 50%;
  text-align: center;
  line-height: 170rpx;
}
.joinsList{
  display: flex;
  margin-top: 30rpx;
  overflow: hidden;
  white-space:nowrap;
}
.avatarWraper{
  overflow: auto;
} 
.avatar{
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
  margin-right: 10rpx;
}